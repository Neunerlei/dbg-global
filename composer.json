{
	"name": "neunerlei/dbg-global",
	"description": "Companion plugin to install the neunerlei/dbg module globally in any composer project",
	"type": "composer-plugin",
	"license": "Apache-2.0",
	"version": "1.1.3",
	"authors": [
		{
			"name": "Martin Neundorfer",
			"email": "code@neunerlei.eu",
			"homepage": "https://www.neunerlei.eu",
			"role": "Developer"
		}
	],
	"support": {
		"issues": "https://github.com/neunerlei/dbg-global/issues",
		"source": "https://github.com/neunerlei/dbg-global"
	},
	"require": {
		"composer-plugin-api": "^1.0 || ^2.0",
		"neunerlei/filesystem": "^5.3"
	},
	"require-dev": {
		"composer/composer": "^1.3"
	},
	"autoload": {
		"psr-4": {
			"Neunerlei\\DbgGlobal\\": "Classes/"
		}
	},
	"extra": {
		"class": "Neunerlei\\DbgGlobal\\Composer\\InstallerPlugin"
	},
	"config": {
		"allow-plugins": {
			"0.0.0/composer-include-files": true
		}
	}
}
